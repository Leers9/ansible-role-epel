[epel]
name=Extra Packages for Enterprise Linux {{ epel_rel }} - $basearch
#baseurl=http://download.fedoraproject.org/pub/epel/{{ epel_rel }}/$basearch
mirrorlist=https://mirrors.fedoraproject.org/metalink?repo=epel-{{ epel_rel }}&arch=$basearch
failovermethod=priority
{% if epel_repos.epel is defined %}
{%   if epel_repos.epel %}
enabled=1
{%   else %}
enabled=0
{%   endif %}
{% else %}
enabled=0
{% endif %}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-{{ epel_rel }}

